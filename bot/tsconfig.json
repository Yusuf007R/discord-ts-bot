{
  "include": [
    "src",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": false,
    "lib": [
      "ESNext"
    ],
    "declaration": false,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/",
    "typeRoots": [
      "./node_modules/@types",
      "src/interfaces"
    ],
    "baseUrl": ".",
    "paths": {
      "@Configs": [
        "./src/config"
      ],
      "@Interfaces/*": [
        "./src/interfaces/*"
      ],
      "@Commands/*": [
        "./src/commands/*"
      ],
      "@Events/*": [
        "./src/events/*"
      ],
      "@EventsValidators/*": [
        "./src/event-validators/*"
      ],
      "@Components/*": [
        "./src/components/*"
      ],
      "@Utils/*": [
        "./src/utils/*"
      ],
      "@Managers/*": [
        "./src/managers/*"
      ],
      "@Structures/*": [
        "./src/structures/*"
      ],
      "@AiStructures/*": [
        "./src/ai-stuff/structures/*"
      ]
    }
  }
}